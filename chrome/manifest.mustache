{
  "manifest_version": 2,

  "name": "w.s",
  "description": "The Whisperers' Society",
  "version": "1.0",
  "options_page": "options.html",

  "permissions": [
    "tabs",
    "http://{{prod_config.HOST}}:{{prod_config.VISIBLE_PORT}}/",
    "http://{{dev_config.HOST}}:{{dev_config.VISIBLE_PORT}}/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js", "contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
